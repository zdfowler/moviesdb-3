<h1>Add a new movie</h1>

<%= form_for @movie do |f| %>

<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
</p>
<p>
    <%= f.label :year %>
    <%= f.text_field :year  %>
</p>
<p>
    <%= f.label :description %>
    <%= f.text_area :description  %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>